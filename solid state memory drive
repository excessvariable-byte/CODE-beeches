                text: "Provides external visibility into the liquid memory medium. It is constructed using reinforced poly-sapphire, which also allows for optical readouts for diagnostic purposes."
            },
            "liquid-chamber": {
                name: "Liquid Memory Chamber",
                text: "Contains the engineered data-carrying ionic nano-channels. This liquid medium can adapt dynamically and features self-healing molecular structures to prevent wear."
            },
            "quantum-lattice": {
                name: "Quantum-Lattice Matrix",
                text: "Provides a stabilized micro-environment for the fluid-state bit logic. This matrix enables the 'quantum-like' data transitions by precisely organizing the nano-channels."
            },
            "nano-channels": {
                name: "Ionic Nano-Channels",
                text: "These are the core of the liquid memory. They are engineered, data-carrying fluid pathways capable of storing state information by changing their ionic properties."
            },
            "fiber-optic": {
                name: "Fiber Optic Data Pathways",
                text: "Used for ultra-high-speed data transmission between the liquid logic layer and the solid-state circuits, minimizing latency."
            },
            "thermal-pipes": {
                name: "Thermal Micro-Pipes",
                text: "Embedded pipes that actively transfer heat away from both the liquid chamber and the solid-state circuits, ensuring operational stability and preventing throttling."
            },
            "solid-state": {
                name: "Solid-State Memory Layer",
                text: "A traditional silicon-based NAND/flash layer that works as a long-term, stable backup for non-volatile data storage."
            },
            "heat-plate": {
                name: "Heat Dissipation Plate",
                text: "Ensures thermal regulation by spreading heat across a larger surface area at the base of the module, working in conjunction with the micro-pipes."
            }
        };

        // --- Utility Function for Exponential Backoff ---
        async function fetchWithRetry(url, payload, retries = 3, delay = 1000) {
            for (let i = 0; i < retries; i++) {
                try {
                    const response = await fetch(url + API_KEY, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (response.status === 429 && i < retries - 1) {
                        await new Promise(resolve => setTimeout(resolve, delay * (2 ** i) + Math.random() * 1000));
                        continue;
                    }

                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }

                    return response.json();

                } catch (error) {
                    if (i === retries - 1) throw error;
                    // Retrying...
                }
            }
        }

        // --- Navigation Logic ---
        const navLinks = document.querySelectorAll('.nav-link');
        const sections = document.querySelectorAll('.content-section');

        function updateActiveTab(targetId) {
            navLinks.forEach(link => {
                link.classList.toggle('active', link.dataset.target === targetId);
            });
            sections.forEach(section => {
                section.classList.toggle('active', section.id === targetId);
            });
        }

        navLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                updateActiveTab(e.target.dataset.target);
            });
        });

        // Initialize with a default tab
        updateActiveTab('overview');

        // --- Core Technology Interaction Logic ---
        const componentListItems = document.querySelectorAll('.component-item');
        const diagramLayers = document.querySelectorAll('.diagram-layer');
        const componentTitle = document.getElementById('component-title');
        const componentText = document.getElementById('component-text');

        function updateTechnologyView(componentId) {
            // Update List
            componentListItems.forEach(item => {
                item.classList.toggle('active', item.dataset.component === componentId);
            });

            // Update Diagram
            diagramLayers.forEach(layer => {
                layer.classList.toggle('highlight', layer.dataset.layer === componentId);
            });

            // Update Description Box
            const data = componentData[componentId];
            if (data) {
                componentTitle.textContent = data.name;
                componentText.textContent = data.text;
            }
        }

        componentListItems.forEach(item => {
            item.addEventListener('click', (e) => {
                const componentId = e.currentTarget.dataset.component;
                updateTechnologyView(componentId);

                // Scroll to the description box on mobile for better UX
                if (window.innerWidth < 1024) {
                    document.getElementById('component-description-box').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                }
            });
        });

        // Initialize with a default component highlighted
        updateTechnologyView('liquid-chamber');

        // --- Gemini Component Comparison AI Logic ---
        const componentSelect1 = document.getElementById('component-1');
        const componentSelect2 = document.getElementById('component-2');
        const compareButton = document.getElementById('compare-button');
        const comparisonResult = document.getElementById('comparison-result');
        const comparisonTitleSpan = document.getElementById('comparison-title-span');
        const comparisonContent = document.getElementById('comparison-content');
        const comparisonLoader = document.getElementById('comparison-loader');

        // Populate dropdowns
        Object.keys(componentData).forEach(id => {
            const option1 = document.createElement('option');
            option1.value = id;
            option1.textContent = componentData[id].name;
            componentSelect1.appendChild(option1);

            const option2 = document.createElement('option');
            option2.value = id;
            option2.textContent = componentData[id].name;
            componentSelect2.appendChild(option2);
        });

        function checkComparisonInputs() {
            const id1 = componentSelect1.value;
            const id2 = componentSelect2.value;
            compareButton.disabled = !id1 || !id2 || id1 === id2;
        }

        componentSelect1.addEventListener('change', checkComparisonInputs);
        componentSelect2.addEventListener('change', checkComparisonInputs);

        compareButton.addEventListener('click', async () => {
            const id1 = componentSelect1.value;
            const id2 = componentSelect2.value;

            if (!id1 || !id2 || id1 === id2) return;

            const name1 = componentData[id1].name;
            const desc1 = componentData[id1].text;
            const name2 = componentData[id2].name;
            const desc2 = componentData[id2].text;

            const systemPrompt = "You are a specialized technical architect. Analyze the two provided memory module components. Provide a concise, professional comparison that explains their individual roles, their functional relationship, and how their combined operation contributes to the overall Hybrid Liquid-Solid State Memory Module's success. Format the response using markdown (H3, paragraphs, and lists).";

            const userQuery = `Component 1 is named "${name1}" and its function is: "${desc1}". Component 2 is named "${name2}" and its function is: "${desc2}". Analyze the relationship between these two specific components in the context of the hybrid memory module.`;

            comparisonTitleSpan.textContent = `${name1} vs. ${name2}`;
            comparisonContent.innerHTML = '';
            comparisonResult.classList.add('active');
            comparisonResult.classList.remove('hidden');
            comparisonLoader.classList.remove('hidden');
            compareButton.disabled = true;

            const payload = {
                contents: [{ parts: [{ text: userQuery }] }],
                systemInstruction: { parts: [{ text: systemPrompt }] },
            };

            try {
                const result = await fetchWithRetry(API_URL, payload);
                const text = result.candidates?.[0]?.content?.parts?.[0]?.text || "Analysis could not be generated.";
                
                // Simple markdown conversion for display
                let htmlContent = text.replace(/### (.*)/g, '<h4>$1</h4>')
                                      .replace(/\*\*(.*)\*\*/g, '<strong>$1</strong>')
                                      .replace(/\n\n/g, '<p>')
                                      .replace(/\n/g, '<br>');
                                      
                comparisonContent.innerHTML = htmlContent;
                
            } catch (error) {
                console.error('Gemini API Error for Comparison:', error);
                comparisonContent.innerHTML = `<p class="text-red-600">Error generating analysis. Please try again. (Details: ${error.message})</p>`;
            } finally {
                comparisonLoader.classList.add('hidden');
                compareButton.disabled = false;
            }
        });


        // --- Gemini Application Scenario Generator Logic ---
        const scenarioInput = document.getElementById('scenario-input');
        const scenarioButton = document.getElementById('scenario-button');
        const scenarioResult = document.getElementById('scenario-result');
        const scenarioTitleSpan = document.getElementById('scenario-title-span');
        const scenarioContent = document.getElementById('scenario-content');
        const scenarioLoader = document.getElementById('scenario-loader');

        scenarioButton.addEventListener('click', async () => {
            const industry = scenarioInput.value.trim();
            if (!industry) {
                scenarioInput.focus();
                return;
            }

            const systemPrompt = "You are a visionary technology marketing strategist. Your task is to take a given industry and the technical advantages of the Hybrid Liquid-Solid State Memory Module (Higher Bandwidth, Longer Endurance, Better Thermal Efficiency, Adaptive In-Memory Computation) and generate a compelling, detailed application scenario. The response must be a single paragraph summary followed by a brief bulleted list of Key Benefits. Do not use any markdown formatting like bolding or headings. Keep the language professional and impactful.";

            const userQuery = `Create a high-impact application scenario for the Hybrid Liquid-Solid State Memory Module within the industry/challenge of: ${industry}. Focus on how its unique hybrid liquid-solid features (zero wear, superior heat transfer, in-memory processing) solve current limitations in that field.`;

            scenarioTitleSpan.textContent = industry;
            scenarioContent.innerHTML = '';
            scenarioResult.classList.add('active');
            scenarioResult.classList.remove('hidden');
            scenarioLoader.classList.remove('hidden');
            scenarioButton.disabled = true;

            const payload = {
                contents: [{ parts: [{ text: userQuery }] }],
                systemInstruction: { parts: [{ text: systemPrompt }] },
            };

            try {
                const result = await fetchWithRetry(API_URL, payload);
                const text = result.candidates?.[0]?.content?.parts?.[0]?.text || "Scenario could not be generated.";
                
                // Simple formatting based on expected output (paragraph + list)
                const parts = text.split(/‚Ä¢/);
                let html = `<p>${parts[0].trim()}</p>`;
                if (parts.length > 1) {
                    html += '<h4>Key Benefits:</h4><ul>';
                    for (let i = 1; i < parts.length; i++) {
                        if (parts[i].trim()) {
                            html += `<li>${parts[i].trim()}</li>`;
                        }
                    }
                    html += '</ul>';
                }
                
                scenarioContent.innerHTML = html;
                
            } catch (error) {
                console.error('Gemini API Error for Scenario:', error);
                scenarioContent.innerHTML = `<p class="text-red-600">Error generating scenario. Please try again. (Details: ${error.message})</p>`;
            } finally {
                scenarioLoader.classList.add('hidden');
                scenarioButton.disabled = false;
            }
        });
    </script>
</body>
</html>
